<h1>Show Articles</h1>

<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<h2>Comments</h2>
  <% @article.comments.each do |comment| %>
    <h4><strong>Reader:</strong>
      <%= comment.reader %></h4>
    <p><strong>Comment:</strong>
      <%= comment.content %></p>
<% end %>

<%= form_for [@article, @article.comments.build] do |f| %>
  <%= f.label :reader %>
  <%= f.text_field :reader %><br/>
  <%= f.label :content %>
  <%= f.text_area :content %><br/>
  <%= f.submit %>
<% end %>

<%= link_to 'Edit Article', edit_article_path(@article) %><br/>
<%= link_to 'Home', root_path %>
