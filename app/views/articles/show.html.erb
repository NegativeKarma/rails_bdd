<h1 class="display-1">Articles List</h1>

<h1><%= @article.title %></h1>
<h2><%= @article.content %></h2>

<h1 class="display-3">Comments</h1>
  <% @article.comments.each do |comment| %>
    <h4><strong>Reader:</strong>
      <%= comment.reader %></h4>
    <p><strong>Comment:</strong>
      <%= comment.content %></p>
<% end %>

<%= form_for [@article, @article.comments.build] do |f| %>
  <div class="field form-group">
    <%= f.label :reader, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :reader, class: 'form-control' %><br/>
      <small class="form-text text-muted">Your email address is needed to create a comment</small>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :content, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control' %><br/>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :Create_Comment, class: "btn btn-primary" %>
      <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-light' %><br/>
      <%= link_to 'Home', root_path, class: 'btn btn-light' %>
    </div>
  </div>

<% end %>
