<h1>New Articles</h1>

<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br/>
  <%= f.label :content %>
  <%= f.text_area :content %><br/>
  <%= f.submit %>
<% end %>

<%= link_to 'Home', root_path %>
