<h1 class="display-1">Edit article</h1>

<%= form_for @article do |f| %>
  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %><br/>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :content, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control' %><br/>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :Edit_Article, class: 'btn btn-primary' %>
      <%= link_to 'Home', root_path, class: 'btn btn-light' %>
    </div>
  </div>
<% end %>
