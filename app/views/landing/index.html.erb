<h1 class="display-1">Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <h1><%= article.title %></h1>
    <h2><%= article.content %></h2>
    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Edit Article', edit_article_path(article), class: 'btn btn-light' %>
        <%= link_to 'Show and Create Comments', article_path(article), class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>
</ul>

<%= link_to 'Create New Article', '/articles/new', class: "font-weight-bold" %>
